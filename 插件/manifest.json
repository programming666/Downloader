{
  "manifest_version": 3,
  "name": "Downloader Extension",
  "version": "1.0",
  "description": "拦截浏览器下载并发送到Downloader应用程序",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "downloads",
    "storage",
    "notifications",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Downloader Extension",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}